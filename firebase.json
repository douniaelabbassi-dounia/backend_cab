{
  "hosting": {
    "public": "Ionic-project/www",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      ".git/**",
      "**/node_modules/**",
      "functions/**"
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" ci",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
