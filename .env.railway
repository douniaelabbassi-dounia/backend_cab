# ============================================
# CABSUL BACKEND - RAILWAY PRODUCTION CONFIG
# ============================================
# INSTRUCTIONS:
# 1. Après déploiement, récupérez les valeurs MySQL depuis Railway Dashboard
# 2. Remplacez les placeholders {{...}} par les vraies valeurs
# 3. Ajoutez ces variables dans Railway > Variables
# ============================================

APP_NAME=Cabsul
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL={{RAILWAY_PUBLIC_URL}}

# ============================================
# DATABASE - MySQL Railway
# ============================================
# Récupérez ces valeurs depuis Railway Dashboard > MySQL > Variables
DB_CONNECTION=mysql
DB_HOST={{MYSQLHOST}}
DB_PORT={{MYSQLPORT}}
DB_DATABASE={{MYSQLDATABASE}}
DB_USERNAME={{MYSQLUSER}}
DB_PASSWORD={{MYSQLPASSWORD}}

# Ou utilisez DATABASE_URL directement (Railway le fournit)
# DATABASE_URL={{DATABASE_URL}}

# ============================================
# LOGGING & CACHE
# ============================================
LOG_CHANNEL=stderr
LOG_LEVEL=error

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ============================================
# SANCTUM - API Authentication
# ============================================
# Ajoutez votre domaine Railway ici
SANCTUM_STATEFUL_DOMAINS="localhost,localhost:8100,127.0.0.1,127.0.0.1:8100,{{RAILWAY_PUBLIC_DOMAIN}},capacitor://localhost,ionic://localhost"

# ============================================
# CORS - Cross-Origin (Important pour Ionic)
# ============================================
# Ces valeurs sont utilisées dans config/cors.php
CORS_ALLOWED_ORIGINS="*"

# ============================================
# MAIL (Optionnel - Configurer si nécessaire)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@cabsul.fr"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# MISC
# ============================================
BCRYPT_ROUNDS=12

